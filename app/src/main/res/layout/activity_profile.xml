<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corelabsplus.getmetheredriver.activities.Profile">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@color/colorPrimary"
            app:title="@string/app_name" />

    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/offSetColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/appbar"
        android:src="@drawable/pp2"/>


    <android.support.v7.widget.CardView
        android:id="@+id/nameWrapper"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/profileImg"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="John Doe"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/phoneWrapper"
        android:layout_below="@+id/nameWrapper"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/phone"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="+250788000000"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/plateNbrWrapper"
        android:layout_below="@+id/phoneWrapper"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/plateNbr"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="RAC 001 Z"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
